{
  "name": "stock-ai",
  "version": "1.0.0",
  "description": "台灣股票AI計算器 - HTML 轉桌面應用",
  "main": "main.js",
  "author": "Joseph PAI",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.pai11joseph.twstock",
    "productName": "台灣股票AI計算器",
    "directories": {
      "output": "dist"
    },
    "publish": null,
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        }
      ],
      "icon": "icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "perMachine": false
    }
  },
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0"
  }
}
