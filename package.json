{
  "name": "stock-ai",
  "version": "1.0.0",
  "description": "HTML 转 Windows 安装包",
  "main": "main.js",
  "author": "Joseph PAI",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
"build": {
  "appId": "com.pai11joseph.twstock",
  "productName": "台灣股票AI計算器",
  "directories": {
    "output": "dist"
  },
  "publish": null,
  "win": {
    "target": "nsis"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["universal"]
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "perMachine": false
  }
}，
  "devDependencies": {
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0"
  }
}
